<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/len_4"
    android:paddingBottom="@dimen/len_4"
    android:paddingStart="@dimen/len_16"
    android:paddingEnd="@dimen/len_56"
    >
    <FrameLayout
        android:layout_gravity="start"
        android:background="@drawable/cell_chat_bg"
        android:layout_marginStart="@dimen/len_20"
        android:paddingTop="@dimen/len_8"
        android:paddingBottom="@dimen/len_8"
        android:paddingStart="@dimen/len_28"
        android:paddingEnd="@dimen/len_8"
        android:minHeight="@dimen/portraitSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        tools:text="@string/app_name"
        android:id="@+id/txt_content"
        android:minHeight="@dimen/len_24"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/textPrimary"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />

    </FrameLayout>


    <net.common.widget.recycle.a.PortraitView
        android:id="@+id/im_portrait"
        android:layout_width="@dimen/portraitSize"
        android:layout_height="@dimen/portraitSize"
        android:layout_gravity="start"
        android:padding="1dp"
        android:src="@drawable/default_portrait"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        />



</FrameLayout>
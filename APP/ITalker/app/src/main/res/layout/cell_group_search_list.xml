<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/ic_touch_fg"
    android:layout_marginTop="@dimen/len_12"
    android:layout_marginBottom="@dimen/len_12"
    android:layout_marginEnd="@dimen/len_16"
    android:layout_marginStart="@dimen/len_16"
    android:background="@color/white"
    >

    <net.common.widget.recycle.a.PortraitView
        android:id="@+id/search_portrait"
        android:layout_gravity="center_vertical|start"
        android:layout_width="@dimen/portraitSize"
        android:layout_height="@dimen/portraitSize"
        android:src="@drawable/default_portrait"
        />
    <TextView
        android:id="@+id/search_content"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/len_24"
        android:layout_marginStart="@dimen/len_12"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/textAccent"
        android:textSize="@dimen/font_14"
        />
    <ImageView
        android:id="@+id/im_join"
        android:layout_width="@dimen/len_52"
        android:layout_height="@dimen/len_28"
        android:contentDescription="@string/app_name"
        android:enabled="false"
        android:src="@drawable/sel_opt_done_add"
        android:layout_gravity="center_vertical|end"
        android:background="@drawable/sel_btn_bg_accent_4"
        android:tint="@color/white_alpha_208"
        />
</LinearLayout>
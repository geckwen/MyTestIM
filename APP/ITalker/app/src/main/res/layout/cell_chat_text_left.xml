<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/ic_touch_fg"
    android:layout_marginTop="@dimen/len_12"
    android:layout_marginBottom="@dimen/len_12"
    android:layout_marginEnd="@dimen/len_16"
    android:layout_marginStart="@dimen/len_16"
    android:background="@color/white"
    >

    <net.common.widget.recycle.a.PortraitView
        android:id="@+id/im_portrait"
        android:layout_gravity="center_vertical|start"
        android:layout_width="@dimen/portraitSize"
        android:layout_height="@dimen/portraitSize"
        android:src="@drawable/default_portrait"
        />
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/len_24"
        android:gravity="center_vertical"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="40dp"
        android:layout_gravity="start"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/textAccent"
        android:textSize="@dimen/font_14"
        />
    <TextView
        android:id="@+id/txt_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description for user"
        android:layout_marginTop="24dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="40dp"
        android:layout_gravity="start"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLength="32"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/textSecond"
        android:textSize="12sp"
        />
    <ImageView
        android:id="@+id/im_content"
        android:layout_width="@dimen/len_32"
        android:layout_height="@dimen/len_32"
        android:layout_marginEnd="6dp"
        android:contentDescription="@string/app_name"
        android:enabled="false"
        android:src="@drawable/ic_chat_bubble"
        android:layout_gravity="center_vertical|end"
        android:tint="@color/textAccent"
        />
</FrameLayout>